{
    "include": ["src"],
    "exclude": [
        "dist",
        "node_modules"
    ],
    "compilerOptions": {
        "module": "ESNext",
        "lib": ["DOM", "ESNext"],
        "importHelpers": true,
        "declaration": true,
        "sourceMap": true,
        "rootDir": "./src",
        "outDir": "./dist/esm",
        "strict": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "moduleResolution": "Node",
        "jsx": "react",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
    }
}